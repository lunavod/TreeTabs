{
  "manifest_version": 3,
  "name": "TreeTabs NEW",
  "description": "A quick way to browse top posts from DEV Community.",
  "version": "0.0.1",
  "permissions": [
    "tabs",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "externally_connectable": {
    "matches": [
      "http://*/*",
      "https://*/*",
      "http://localhost/*"
    ]
  },
  "background": {
    "service_worker": "background.es.js",
    "type": "module"
  },
  "icons": {
    "16": "ext_icons/icon16.png",
    "32": "ext_icons/icon32.png",
    "48": "ext_icons/icon48.png",
    "128": "ext_icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost/index.html"
      ],
      "css": [
        "style.css"
      ],
      "js": [
        "main.es.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}